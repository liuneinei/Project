
.app{
    width: 100%;
    /*position: relative;*/
    margin: 0 auto;
    height: 100%;
    font-size: 14px;
}

/*步骤*/
.step-title{
    padding: 10px;
    text-align: center;
    width: 92%;
}
.user-upload{
    height: 112px;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.user-upload .avtor{
    width: 100px;
    height: 100px;
    border-radius: 50%;
}
.user-upload .info{
    height: 100%;
    width: 50%;
}
.user-upload p{
    margin-top:30px;
}
.user-upload .btn{
    margin-top: 15px;
}
.btn{
    width: 83px;
    height: 25px;
    text-align: center;
    border: 1px solid #dddddd;
    background: none;
}
.input-list{
    width: 92%;
    margin: 0 auto;
    margin-top: 30px;
}
.input-list .item-lab{
    width: 56px;
}
.input-list .list-item{
    margin-top: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.input-list .ipt{
    border: 1px solid #dddddd;
    width: 78%;
    height: 30px;
    margin-left: 10px;
}
.warp{
    width: 92%;
    margin: 0 auto; 
}
.box-image{  
    margin-top: 20px;
    overflow: hidden;
    display: flex;
    justify-content: space-around;
}
.box-image .box{
    width: 45%;
}
.box-image .box .id_img{
    width: 100%;
    height: 90px;
    border:1px solid #dddddd;
    display: block;
    text-align: center;
    line-height: 90px;
}
.mr10{
    margin-right: 20px;
}
.form-btn{
    margin-top: 20px;
    margin-bottom: 20px;
    text-align: center
}
.form-btn .btn{
    height: 35px;
    font-size: 16px;
}

/* 服务项 */
.service-box{
    margin-top:20px;
}
.inpt-tarea{
    width: 93%;
    height: 80px;
    padding: 10px;
    border: 1px solid #ccc;
    overflow:auto;
    border-radius: 5rpx;
}
.tarea-item{
  display: flex;
  position: relative;
}
.tarea-item .tarea-del{
  position: absolute;
  right: 15rpx;
}
.btn{
    width: 134px;
    height: 70rpx;
    text-align: center;
    border: 1px solid #dddddd;
    background: none;
    font-size: 28rpx;
    line-height:70rpx;
}
