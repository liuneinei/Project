/*头部*/
.item-top{
  background: #71509e;
  height: 260rpx;
  text-align: center;
}
.item-top .top-img{
  padding-top: 20rpx;
}
.item-top .top-img .top__head{
  border-radius: 50%;
  height: 140rpx;
  width: 140rpx;
}

.item-top .top-btn{
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  color: #e7e3ee;
  text-align: center;
}

.item-top .top-btn .btn_upload{
  width: 130rpx;
  height: 40rpx;
  border: 1px solid #e7e3ee;
  font-size: 24rpx;
  border-radius: 25rpx;
  margin: 0 auto;
}

/*内容*/
.item-main{
  background: #ffffff;
}
.item-main .item-content{
  padding: 40rpx 30rpx 0rpx 30rpx; 
}
.item-main .item-content2{
  padding: 40rpx 0rpx 0rpx 30rpx; 
}
.item-main .item-pic-list{
  padding: 40rpx 0rpx 0rpx 30rpx; 
}
.item-content .item-lable{
  font-size: 28rpx;
  color: #333333;
  padding-bottom: 16rpx;
}
.item-content .item-input .item__input{
  height: 88rpx;
  line-height: 88rpx;
  border: 1px solid #dddddd;
  border-radius: 3px;
  padding: 0rpx 20rpx 0rpx 20rpx;
}

.item_names{
  color: #808080;
}

.item-content .item-input .item__textarea{
  line-height: 88rpx;
  height: 152rpx;
  padding-top: 20rpx;
  /*padding: 20rpx;*/
  width: 652rpx;
}

.item__textarea_holder{
  position: static;
  z-index: 0;
}

.item-content .item-input .item__textareah{
  height: 396rpx;
}

.item-content .item-pic{
  width: 320rpx;
  height: 210rpx;
  border: 1px solid #dddddd;
  border-radius: 3px;
  text-align: center;
  position: relative;
}
.item-content .item-pic-cert{
  width: 210rpx;
  height: 160rpx;
}

.item-content .item-pic .item-pic-frame{
  /*line-height: 210rpx;*/
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -25rpx;
  margin-left: -25rpx;
}

.item-content .item-pic .item__pic{
  width: 50rpx;
  height: 50rpx;
}

.item-content .item-content-main{
  display: flex;
  flex-direction: row;
}

.item-content .item-content-main2{
  flex-wrap:wrap;
}

.item-content .item-content-main .item-pic-row1{
  padding-right: 40rpx;
}
.item-content .item-content-main .item-pic-row2{
  padding-right: 25rpx;
  padding-top: 16rpx;
}

.item-pic-row__lable,.item-content .item-content-main .item-pic-row .item-desc{
  padding-top: 10rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}
.container .item-pic-row__lable{
  text-align: left;
  padding-left: 30rpx;
}

.item-btn{
  text-align: center;
}
.item-btn .item-btn__lable{
  color: #999999;
  line-height: 80rpx;
  background-color: #EEEEEE;
  width: 710rpx;
  margin: 0 auto;
  border-radius: 3px;
}