
/*头部*/
.item-top{
  background: #71509e;
  height: 260rpx;
  text-align: center;
}
.item-top .top-img{
  padding-top: 20rpx;
}
.item-top .top-img .top__head{
  border-radius: 50%;
  height: 140rpx;
  width: 140rpx;
}

.item-top .top-btn{
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  color: #e7e3ee;
  text-align: center;
}

.item-top .top-btn .btn_upload{
  width: 130rpx;
  height: 40rpx;
  border: 1px solid #e7e3ee;
  font-size: 24rpx;
  border-radius: 25rpx;
  margin: 0 auto;
}

/*内容*/
.item-main{
  background: #ffffff;
}
.item-main .item-content{
  padding: 40rpx 30rpx 0rpx 30rpx; 
}
.item-main .item-pic-list{
  padding: 40rpx 0rpx 0rpx 30rpx; 
}
.item-content .item-lable{
  font-size: 28rpx;
  color: #333333;
  padding-bottom: 16rpx;
}
.item-content .item-input .item__input{
  height: 88rpx;
  line-height: 88rpx;
  border: 1px solid #dddddd;
  border-radius: 3px;
  padding: 0rpx 20rpx 0rpx 20rpx;
}

.item-content .item-input .item__textarea{
  line-height: 88rpx;
  height: 132rpx;
  padding: 20rpx;
  width: 650rpx;
}

.item-content .item-input .item__textareah{
  height: 396rpx;
}

.item-content .item-pic{
  width: 320rpx;
  height: 210rpx;
  border: 1px solid #dddddd;
  border-radius: 3px;
  text-align: center;
  position: relative;
}
.item-content .item-pic-cert{
  width: 210rpx;
  height: 160rpx;
}

.item-content .item-pic .item-pic-frame{
  /*line-height: 210rpx;*/
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -25rpx;
  margin-left: -25rpx;
}

.item-content .item-pic .item__pic{
  width: 50rpx;
  height: 50rpx;
}

.item-content .item-content-main{
  display: flex;
  flex-direction: row;
}

.item-content .item-content-main .item-pic-row{
  padding-right: 30rpx;
}

.item-pic-row__lable,.item-content .item-content-main .item-pic-row .item-desc{
  padding-top: 10rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}
.container .item-pic-row__lable{
  text-align: left;
  padding-left: 30rpx;
}

/*提交*/
.item-btn{
  padding: 80rpx 30rpx 80rpx 30rpx;
}

.item-btn .item-btn__lable{
  /*background: url(../../images/btn_back.png) no-repeat;*/
  background: #f4f4f4;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}


/*:begin 选项*/
.weui-navbar__item{
    line-height: 72rpx;
    padding: 0px;
}

/*GEO 地区选择 :begin*/
.geo-container{
    height: 100%;
  position: fixed;
  width:750rpx;
  background: #ffffff;
  z-index: 499;
  top: 0px;
}

.geo-container .class-lable{
  padding: 30rpx 0 0 30rpx;
  font-size: 28rpx;
  color: #333333;
}

/*公共*/
.geo-container .geo-item{
  display: inline-flex;
  flex-direction: row;
  height:80rpx;
  line-height:80rpx;
  justify-content:center;
  color: #333333;
  font-size: 28rpx;
}

/*服务*/
.geo-container .server-container{
  overflow-y: auto;
  background: #ffffff;
}
.server-container .server-width{
  width:206rpx;
  border: 1rpx solid #dddddd;
  border-radius: 3px;
  margin: 30rpx 0 0 30rpx;
}

.geo-container .nav-dorpmenu{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    overflow-y: auto;
    overflow-x: hidden;
}

.geo-container .geo-lable{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333333;
  margin-left: 30rpx;
}
/*省*/
.geo-container .province-container{
  height: 100%;
  width: 250rpx;
  overflow-y: auto;
  background: #f4f4f4;
}

.geo-container .nav-dorpmenu .province-container .checkon{
  background: #ffffff;
}

/*省 宽度*/
.geo-container .province-width{
  justify-content: flex-start;
  width:250rpx;
  padding-left: 30rpx;
}

/*市*/
.geo-container .city-container{
  height: 100%;
  overflow-y: auto;
  padding-top: 72rpx;
  width: 500rpx;
  background: #ffffff;
}
/*宽度*/
.geo-container .city-width{
  width:500rpx;
  justify-content: flex-start;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #dddddd;
}
/*GEO 地区选择 :end*/

.geo-container .tab-class-btn{
  width: 750rpx;
  position: absolute;
  bottom: 50rpx;
}
.geo-container .tab-class-btn-lable{
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  text-align: center;
  /*background: url(../../images/btn_submit.png) no-repeat;*/
  background: #714E9E;
  color: #999999;
  font-size: 28rpx;
  border-radius: 5rpx;
}
/*:end 选项*/