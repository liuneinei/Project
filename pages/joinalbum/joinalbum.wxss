
.swiper-container {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #000;
}

.swiper-container image {
    width: 100%;
    height: 100%;
}

.btn-del{
  width: 100rpx;
  color: #ffffff;
  position: fixed;
  bottom: 15rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
    display: inline-block;
    vertical-align: middle;
    font: normal normal normal 14px/1 "weui";
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
}
.btn-del::before{
  content: "\EA11";
      display: inline-block;
}