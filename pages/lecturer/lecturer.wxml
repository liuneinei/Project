
  <view class="box">
   <view class="box-item">
    <view class="nav-item" bindtap="ClassdTap">
      <block wx:if="{{Req.showType != 1}}">
        <view class="nav-item-title weui-navbar__item__lable">{{Class.name}}</view>
        <view class="weui-navbar__item__icon">
          <image src="/images/open_up.png" class="navbar__item__i"></image>
        </view>
      </block>
      <block wx:else>
        <view class="weui-navbar__item__lable_on">{{Class.name}}</view>
          <view class="weui-navbar__item__icon">
            <image src="/images/pack_up.png" class="navbar__item__i"></image>
        </view>
      </block>
    </view>
    <view class="navbar__item__border">
      <view class="navbar__item__bi"></view>
    </view>
    <view class="nav-item" bindtap="RegionTap">
      <block wx:if="{{Req.showType < 2}}">
        <view class="weui-navbar__item__lable">{{Region.showname}}</view>
        <view class="weui-navbar__item__icon">
          <image src="/images/open_up.png" class="navbar__item__i"></image>
        </view>
      </block>
      <block wx:else>
        <view class="weui-navbar__item__lable_on">{{Region.showname}}</view>
        <view class="weui-navbar__item__icon">
          <image src="/images/pack_up.png" class="navbar__item__i"></image>
        </view>
      </block>
    </view>
   </view>
  </view>
<block wx:if="{{Req.showType != 0}}">
  <view class="geo-container" catchtap="HideGeoTap">
    <block wx:if="{{Req.showType == 1}}">
      <view class="server-container">
        <view  class="geo-item server-width {{Class.id == 0 ? 'checkon1':''}}" bindtap="ClassTap" data-id="0">全部</view>
        <view wx:for="{{Lists.classList}}" wx:for-item="item" class="geo-item server-width {{item.id == Class.id ? 'checkon1':''}}" catchtap="ClassTap" data-id="{{item.id}}" data-title="{{item.title}}">{{item.title}}</view>
      </view>
    </block>
    <block wx:if="{{Req.showType == 2}}">
      <view class="nav-dorpmenu">
          <scroll-view class="province-container" scroll-y style="height: {{wHeight}}px;" scroll-top="{{scrollTop}}">
            <block wx:for="{{Lists.regionList}}">
              <block wx:if="{{item.nop > 0}}">
                <view class="geo-item province-width {{item.id == Region.pid ? 'checkon2':''}}" catchtap="ProvinceTap" data-id="{{item.id}}" data-name="{{item.name}}">{{item.name}}</view>
              </block>
            </block>
          </scroll-view>
        <view class="city-container" style="height:{{wHeight}}px">
          <block wx:for="{{Lists.cityList}}">
            <block wx:if="{{item.nop > 0}}">
              <view class="geo-item city-width" catchtap="CityTap" data-id="{{item.id}}" data-name="{{item.name}}">{{item.name}}</view>
            </block>
          </block>
        </view>
      </view>
    </block>
  </view>
</block>
<block wx:if="{{requests.total <= 0}}">
  <view class="page-loading">
    <text class="loading-text">暂无专家</text>
  </view>
</block>
<block wx:else>
  <scroll-view style="height: 100%;" scroll-y="true" class="container film-list" bindscrolltolower="scrolltolower">
  <view class="blank80"></view>
  <view class="blank20"></view>
    <block wx:for-items="{{lecturers}}" wx:for-item="lecturer">
      <view class="film-item" bindtap="bingInfo"  data-id="{{lecturer.id}}" data-obj="{{lecturer}}">
        <view class="film-image">
          <image src="{{host}}/{{lecturer.face_img}}{{iImgExt}}"></image>
        </view>
        <view class="film-info">
          <view class="directors">
            <text class="label">{{lecturer.name}}</text>
            <block wx:for-items="{{lecturer.service}}" wx:for-item="services">
                <text class="person">{{services.title}}</text>
            </block>
          </view>
          <view class="film-rating">
              <text class="label">{{lecturer.intro}}</text>
          </view>
        </view> 
      </view>
    </block>
    <block wx:if="{{requests.total>10}}">
    <view class="load-more-wrap">
      <block wx:if="{{hasMore}}">
        <view class="load-content">
          <text class="weui-loading"/>
          <text class="loading-text">正在加载中</text>
        </view>
      </block>
      <block wx:else>
          <view class="load-content">
            <text>没有更多内容了</text>
          </view>
      </block>
    </view>
    </block>
    <block wx:else>
      <view class="blank40"></view>
    </block>
  </scroll-view>
  </block>