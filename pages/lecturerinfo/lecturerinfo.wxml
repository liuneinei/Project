<view class="container">
  <view class="item-top">
    <view class="top-img">
      <image src="{{host}}/{{Model.face_img}}{{iImgExt}}" class="top__head"></image>
    </view>
    <view class="top-btn">
      <view class="btn_upload">{{Model.name}}</view>
    </view>
    <view class="top-desc">
      <view class="top__desc">
      <block wx:if="{{Model.service.length > 0}}">
        <block wx:for="{{Model.service}}">
          <block wx:if="{{index == 0}}">
            {{item.title}}
          </block>
        </block>
        /  
      </block>
      {{Model.province}} {{Model.city}}
      </view>
    </view>
  </view>
  <view class="item-main">
    <view class="item__frame">
      <view class="item-title">
      <view class="item-i">
        <image src="/images/about.png" class="item-icon"></image>
      </view>
      <view class="item-i_d">·</view>
      <view class="item-title_lable">关于专家</view>
      </view>
      <view class="blank40 backfff"></view>
      <view class="item-content item-indent">{{Model.about}}</view>
      <view class="blank50 backfff"></view>
    </view>
    <view class="blank10"></view>
    <view class="item__frame">
      <view class="item-title">
        <view class="item-i">
          <image src="/images/btn_notice.png" class="item-icon"></image>
        </view>
        <view class="item-i_d">·</view>
        <view class="item-title_lable">服务须知</view>
      </view>
      <view class="blank40 backfff"></view>
      <view class="item-content">{{Model.about}}</view>
    </view>
    <view class="blank50 backfff"></view>
  </view>
  <view class="item-tabber">
    <view class="tabber-item" data-phone="{{Model.phone}}" bindtap="PhoneTap">
      <view class="tabbar__i">
        <image src="/images/btn_phone.png" class="tabbar__icon"></image>
      </view>
      <view class="tabbar__label">电话联系</view>
    </view>
    <view class="tabber-item" style="display:none">
      <view class="tabbar__i">
        <image src="/images/btn_qrcode.png" class="tabbar__icon"></image>
      </view>
      <view class="tabbar__label tabbar__label333">二维码</view>
    </view>
  </view>
</view>