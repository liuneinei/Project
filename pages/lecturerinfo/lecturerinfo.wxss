/*头部*/
.item-top{
  background: #71509e;
  height: 347rpx;
  text-align: center;
}
.item-top .top-img{
  padding-top: 20rpx;
}
.item-top .top-img .top__head{
  border-radius: 50%;
  height: 140rpx;
  width: 140rpx;
}

.item-top .top-btn{
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  color: #e7e3ee;
  text-align: center;
}

.item-top .top-btn .btn_upload{
  width: 130rpx;
  height: 40rpx;
  font-size: 32rpx;
  margin: 0 auto;
  color: #ffffff;
}

.item-top .top-desc .top__desc{
  font-size: 24rpx;
  color: #e7e3ee;
  padding: 24rpx 0 40rpx 0rpx;
}

/*内容*/
.item-main{
  padding-bottom: 96rpx;
}
.item-main .item__frame{
  background: #ffffff;
}

.item-main .item__frame .item-title{
  padding-top: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ad83e4;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.item-main .item__frame .item-title .item-i .item-icon{
  width: 36rpx;
  height: 36rpx;
  vertical-align: text-bottom;
}

.item-main .item__frame .item-i_d{
  width: 30rpx;
}

.item-main .item__frame .item-content{
 font-size: 28rpx;
 color: #555555;
 line-height: 50rpx;
 padding: 0 30rpx 0 30rpx; 
}
.item-main .item__frame .item-indent{
  text-indent: 2em;
}

.item-tabber{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  height: 96rpx;
  line-height: 96rpx;
border-top: 1rpx solid #cccccc;
width: 750rpx;
background: #ffffff;
}
.tabber-item:first-child{
  border-right: 1rpx solid #cccccc;
}
.item-tabber .tabber-item{
  display: flex;
  flex-direction: row;
  width: 50%;
  margin: 0 auto;
  justify-content: center;
}
.item-tabber .tabber-item .tabbar__i .tabbar__icon{
  width: 40rpx;
  height: 40rpx;
  vertical-align: text-bottom;
}

.item-tabber .tabbar__label{
  font-size: 32rpx;
  color: #2dbe82;
  padding-left: 26rpx;
}
.item-tabber .tabbar__label333{
  color: #333333;
}