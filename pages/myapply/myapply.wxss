
.app{
    width: 100%;
    /*position: relative;*/
    margin: 0 auto;
    height: 100%;
    font-size: 14px;
}

/*步骤*/
.step-title{
    padding: 10px;
    text-align: center;
    width: 92%;
}
.user-upload{
    height: 112px;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
.user-upload .avtor{
    width: 100px;
    height: 100px;
    border-radius: 50%;
}
.user-upload .info{
    height: 100%;
    width: 50%;
}
.user-upload p{
    margin-top:30px;
}
.user-upload .btn{
    margin-top: 15px;
}
.btn{
    width: 83px;
    height: 25px;
    text-align: center;
    border: 1px solid #dddddd;
    background: none;
}
.input-list{
    width: 650rpx;
    margin: 0 auto;
    margin-top: 50rpx;
}
.input-list .item-lab{
    width: 150rpx;
}
.input-list .list-item{
    margin-top: 35rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.input-list .ipt{
    border: 1px solid #dddddd;
    width: 480rpx;
    height: 65rpx;
    line-height: 65rpx;
    margin-left: 15rpx;
    padding-left: 15rpx;
}
.warp{
    width: 92%;
    margin: 0 auto; 
}
.box-image{  
    margin-top: 20px;
    overflow: hidden;
    display: flex;
    justify-content: space-around;
}
.box-image .box{
    width: 45%;
}
.box-image .box .id_img{
    width: 100%;
    height: 90px;
    border:1px solid #dddddd;
    display: block;
    text-align: center;
    line-height: 90px;
}
.mr10{
    margin-right: 20px;
}

.idcard-img{
  width: 100%;
  height: 100%;
}

.form-btn{
    margin-top: 20px;
    margin-bottom: 20px;
    text-align: center
}
.form-btn .btn{
    font-size: 16px;
}

.btn-next{
  height: 70rpx;
  line-height: 70rpx;
  width: 500rpx;
  background: #71509e;
  border: 1px solid #71509e;
  color: #fff;
}