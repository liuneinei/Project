<view class='app'>
  <scroll-view style="height:{{scroll.height}}px" scroll-y="true" class="container film-list" bindscrolltolower="scrolltolower" scroll-with-animation='true' bindscroll="scroll">
    <view class='list'>
      <view wx:for="{{coursesdata.list}}" wx:for-item="item" class='list-item' data-id='{{item.id}}' bindtap='btnCoursesInfo' >
        <view class='img'>
          <image src="{{item.img}}" class='show'></image>
        </view>
        <view class='txt'>
          <view class='title'>{{item.title}}</view>
          <view class='label'>
            标签：
            <block wx:for="{{item.tags}}" wx:for-item="tag">
              {{tag.name}}
            </block>
          </view>
        </view>
      </view>
    </view>
      <view class="load-more-wrap">
        <block wx:if="{{!req.over}}">
          <view class="load-content">
            <text class="weui-loading"/>
            <text class="loading-text">正在加载中</text>
          </view>
        </block>
        <block wx:else>
            <view class="load-content">
              <text>没有更多内容了</text>
            </view>
        </block>
      </view>
  </scroll-view>
</view>