
.app{
    width: 100%;
    /*position: relative;*/
    margin: 0 auto;
    height: 100%;
    font-size: 14px;
}

/*专家头像*/
.expert-index{
    width: 92%;
    margin: 0 auto;
}
.expert-header{
    height: 195px;
    border: 1px solid #dddddd;
    margin-top: 10px;
    display: flex;
    flex-direction: column;
}
.expert-header .avtor{
    width: 100px;
    height: 100px;
    border-radius: 50%;
    align-self: center;
    margin-top: 29px;
}

.user-header{
    border: 0;
    height: 165px;
}
.user-header .name{
    width: 100%;
    text-align: center;
    flex: 1;
    margin-top: 10px;
}

.operate .operate-teim{
    border: 1px solid #dddddd;
    height: 35px;
    width: 92%;
    padding: 0 10px;
    margin-top: 10px;
    display: flex;
    align-items: center;
}
.operate .operate-teim .my-operate{
    flex: 0 0 92%;
}
.operate .operate-teim .i{
    background: url(data:image/png;base64,) no-repeat center;
    width: 22px;
    height: 22px;
    flex: 1;
}